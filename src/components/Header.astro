---
import { config } from "../config";
import Button from "./Button.astro";
import Logo from "./Logo.astro";
---

<header class="bg-gradient-to-r from-blue-600 to-blue-800  w-full z-10 transition-all duration-300" id="header">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold">
      <Logo/>
    </a>
    <div class="font-['Oswald'] uppercase text-sm font-medium hidden md:flex space-x-6">
      <a href="#despre" class="text-white hover:text-accent transition-colors">Despre Noi</a>
      <a href="#servicii" class="text-white hover:text-accent transition-colors">Servicii</a>
      <a href="#zona" class="text-white hover:text-accent transition-colors">Zonă Acoperită</a>
      <a href="#contact" class="text-white hover:text-accent transition-colors">Contact</a>
    </div>
    <Button href={`tel:${config.phoneNumber.code}`}>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" viewBox="0 0 512 512"><path d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"/></svg>
      <span>0770 246 709</span>
    </Button>
    
    <!-- <button class="md:hidden text-white hover:text-blue-600 transition-colors" id="menu-toggle">
      Meniu
    </button> -->
  </nav>
  <div class="md:hidden hidden" id="mobile-menu">
    <a href="#despre" class="block py-2 px-4 text-white hover:bg-blue-50">Despre Noi</a>
    <a href="#servicii" class="block py-2 px-4 text-white hover:bg-blue-50">Servicii</a>
    <a href="#zona" class="block py-2 px-4 text-white hover:bg-blue-50">Zonă Acoperită</a>
    <a href="#contact" class="block py-2 px-4 text-white hover:bg-blue-50">Contact</a>
  </div>
</header>


---
import Logo from './Logo.astro';
import { config } from "../config";
// import Button from './Button.astro';
import { Facebook } from 'lucide-svelte';
---

<footer class='bg-primary text-white py-8'>
	<div class='container mx-auto px-6'>
		<div class='flex md:flex-row flex-col gap-4 justify-between items-center mb-8'>
			<a href='/' class='text-2xl font-bold'>
				<Logo />
			</a>

			<a href={config.facebookUrl} target="_blank" rel="noopener noreferrer" class="flex items-center justify-start bg-black/10 text-white fill-white px-4 py-3 whitespace-nowrap rounded-lg hover:bg-accent transition-colors space-x-2 animate-fade-in animation-delay-400 font-['Oswald'] uppercase font-medium text-sm">
				<Facebook/>  <span class="ml-1">Ne gasiti si pe Facebook</span>
			</a>
			<!-- <Button>Ne gasiti si pe Facebook</Button> -->
		</div>
		<hr class='border-blue-800' />

		<div class='grid md:grid-cols-2 gap-8 mb-8 '>
			<div class="md:text-left text-center">
				<h2 class="text-white text-xl font-bold mb-4 opacity-40" >Contact Rapid</h2>
				<p>Telefon: {config.phoneNumber.display}</p>
				<p>Email: {config.email}</p>
			</div>
			<div class="md:text-right text-center">
				<h2 class="text-white text-xl font-bold mb-4 opacity-40">Program de Lucru</h2>
				<p>Luni - Vineri: 08:00 - 18:00</p>
				<p>Serviciu de Urgență: 24/7</p>
			</div>
		</div>

		<hr class='border-blue-800' />
		
		<div class='mt-6 md:text-center text-left'>
			<p class='text-sm'>
				© {new Date().getFullYear()} CCI Electric Constanța. Toate drepturile rezervate.
			</p>
		</div>
	</div>
</footer>
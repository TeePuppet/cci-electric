---
interface Props {
  type?: 'link' | 'button';
  href?: string;
}

const { type = "button", href="#"} = Astro.props as Props;
---
{type === 'link' ? (
  <a href={href} class="flex items-center justify-start bg-accent text-white fill-white px-4 py-3 whitespace-nowrap rounded-lg hover:bg-blue-100 transition-colors space-x-2 animate-fade-in animation-delay-400 font-['Oswald'] uppercase font-medium">
    <slot/>
  </a>
) : (
  <button class="flex items-center justify-start bg-accent text-white fill-white px-4 py-3 whitespace-nowrap rounded-lg hover:bg-blue-100 transition-colors space-x-2 animate-fade-in animation-delay-400 font-['Oswald'] uppercase font-medium">
    <slot/>
  </button>
)}

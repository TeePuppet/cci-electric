---
const areas = [
	'Constanța',
	'Mamaia',
	'Năvodari',
	'Ovidiu',
	'Eforie',
	'Techirghiol',
	'Mangalia',
	'Cumpăna',
	'Lazu',
	'Agigea',
	'Valu lui Traian',
	'Murfatlar',
	'Lumina',
	'Palazu',
];
---
<div class='w-full'>
    <h2>Zone de acoperire</h2
    >
    <div class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-2'>
        {
            areas.map((area) => (
                <div class='p-2 bg-black/10 bg-opacity-50 rounded text-center transition-all'>
                    {area}
                </div>
            ))
        }
    </div>
</div>
